<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tecno.wira.foreventapp.DetilMyEventActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imgdetilMyevent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sosial" />

    <Button
        android:id="@+id/btnMengupdateEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgdetilMyevent"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Hapus Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnlihatpendaftarMYevent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Lihat Peserta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/imgdetilMyevent"
        app:layout_constraintTop_toBottomOf="@+id/btnMengupdateEvent" />

    <TextView
        android:id="@+id/btnlihatpermintaandaftarMyevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="List Permintaan Daftar"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/btnlihatpendaftarMYevent"
        app:layout_constraintStart_toStartOf="@+id/btnlihatpendaftarMYevent"
        app:layout_constraintTop_toBottomOf="@+id/btnlihatpendaftarMYevent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgdetilMyevent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txtnamaDetilMyevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="nama event"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtBiayaDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="biaya event"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txttglmulaiDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="tgl mulai "
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txttglakhirDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="tgl akhir"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtStokDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="stok"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtDeskripsiDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="Deskripsi"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtNamaPembuatDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtDeskripsiDetilMyevent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="Penyelengara"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtJenisEventDetilMyevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:text="Jenis event"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
